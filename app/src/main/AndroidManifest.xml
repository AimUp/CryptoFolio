<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aimarugarte.cryptofolio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name="com.aimarugarte.cryptofolio.MainActivity"
            android:theme="@style/splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aimarugarte.cryptofolio.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/GeneralTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.aimarugarte.cryptofolio.Fragments.Coins.SwipeFrames"
            android:theme="@style/tabTrasparent"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>